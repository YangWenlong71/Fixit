<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.QrCodeActivity">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetEnd="0dp"
            app:maxButtonHeight="20dp"
            app:titleMargin="0dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_back"
                    android:id="@+id/iv_logout"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="7dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#2c2c2c"
                    android:textSize="20dp" />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="7dp" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_marginTop="45dp"
        android:layout_gravity="center"
        android:background="#EBF8EC"
        android:layout_width="294dp"
        android:layout_height="134dp"/>

    <LinearLayout
        android:layout_marginTop="-134dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="134dp">

        <TextView
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="当前酒店："/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="14dp"/>
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/tv_hotel"
            android:layout_width="wrap_content"
            android:textColor="#21B828"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:hint="酒店名"
            />

    </LinearLayout>





    <LinearLayout
        android:paddingBottom="20dp"
        android:layout_marginTop="94dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<!--        <include layout="@layout/widget_stepview"/>-->


        <ImageView
            android:id="@+id/btn_capture"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_scan"
            android:layout_width="93dp"
            android:layout_height="93dp"/>

        <TextView
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:text="扫描二维码"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tv_from_image"
            android:drawableLeft="@drawable/ic_from_image"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#707070"
            android:text="从相册选择"
            />

    </LinearLayout>



    </LinearLayout>

    <View
        android:layout_marginTop="-144dp"
        android:background="@drawable/ic_bg2"
        android:layout_width="match_parent"
        android:layout_height="144dp"/>

    <View
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-72dp"
        android:background="@drawable/ic_logo"
        android:layout_width="109dp"
        android:layout_height="57dp"/>



</LinearLayout>